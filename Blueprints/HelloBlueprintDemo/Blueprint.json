{
    "properties": {
        "displayName": "HelloBlueprintDemo",
        "description": "Testing my first Blueprint as Code; it should contain firstly the 3 Azure Policy resources: 2 Policy definitions for RG & Resources allowed locations + an initiative formed of the two.",
        "targetScope": "subscription",
        "parameters": {
            "Policy_Allowed-Locations": {
                "type": "array",
                "metadata": {
                    "displayName": "List of Allowed Locations",
                    "description": "List of the Allowed Locations used for Resource Groups and Resources deployments.",
                    "strongType": "location"
                },
                "defaultValue": []
            },
            "Policy_Allowed-Skus-StorageAccounts": {
                "type": "array",
                "metadata": {
                    "displayName": "Allowed SKUs [Storage Accounts]",
                    "description": "Allowed SKUs for Storage Accounts",
                    "strongType": "StorageSKUs"
                },
                "defaultValue": []
            },
            "Organization_Name": {
                "type": "string",
                "metadata": {
                    "displayName": "Organization Name",
                    "description": "Name of your organization."
                }
            },
            "Azure_Region": {
                "type": "string",
                "metadata": {
                    "displayName": "Azure Region",
                    "description": "Azure Region to which you want to deploy your Resource Groups.",
                    "strongType": "location"
                },
                "defaultValue": ""
            }
        },
        "resourceGroups": {
            "Network-RG": {
                "name": "[concat(parameters('Organization_Name'), '-Network-RG')]",
                "location": "[parameters('Azure_Region')]",
                "metadata": {
                    "displayName": "Resource Group for Networks"
                },
                "dependsOn": []
            },
            "Application-RG": {
                "name": "[concat(parameters('Organization_Name'), '-Application-RG')]",
                "location": "[parameters('Azure_Region')]",
                "metadata": {
                    "displayName": "Resource Group for Application"
                }
            },
            "Security-RG": {
                "name": "[concat(parameters('Organization_Name'), '-Sercurity-RG')]",
                "location": "[parameters('Azure_Region')]",
                "metadata": {
                    "displayName": "Resource Group for Security"
                }
            },
            "Storage-RG": {
                "name": "[concat(parameters('Organization_Name'), '-Storage-RG')]",
                "metadata": {
                    "displayName": "Resource Group for Storage"
                }
            }
        }
    }
}